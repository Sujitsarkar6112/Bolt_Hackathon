# Service Configuration
SERVICE_NAME=forecast_service
ENVIRONMENT=development
LOG_LEVEL=INFO

# MongoDB Configuration
MONGODB_URL=mongodb://admin:password@localhost:27017/sales_db?authSource=admin
MONGODB_DATABASE=sales_db
MONGODB_COLLECTION=raw_sales

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=demand_forecasting

# Model Configuration - Prophet
PROPHET_SEASONALITY_MODE=multiplicative
PROPHET_YEARLY_SEASONALITY=true
PROPHET_WEEKLY_SEASONALITY=true
PROPHET_DAILY_SEASONALITY=false

# Model Configuration - TFT
TFT_MAX_EPOCHS=100
TFT_BATCH_SIZE=64
TFT_LEARNING_RATE=0.03
TFT_HIDDEN_SIZE=16
TFT_ATTENTION_HEAD_SIZE=4
TFT_DROPOUT=0.1

# Training Configuration
MIN_TRAINING_SAMPLES=90
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1

# Ensemble Configuration
SHORT_TERM_THRESHOLD=30
LONG_TERM_THRESHOLD=180

# Cron Configuration
RETRAIN_CRON="0 2 * * *"

# GPU Configuration
USE_GPU=false
GPU_DEVICE=0